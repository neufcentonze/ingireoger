<section class="admin-dashboard">

  <h1 class="dashboard-title">
    <i data-lucide="layout-dashboard"></i> Tableau de bord
  </h1>

  <!-- üì¶ Blocs -->
  <div class="dashboard-grid">

    <!-- üë• Utilisateurs -->
    <div class="dashboard-card">
      <div class="card-header">
        <i data-lucide="users"></i>
        <h2>Aper√ßu Utilisateur</h2>
      </div>
      <div class="card-content">
        <p>Visiteurs uniques : <strong><%= stats.visitors %></strong></p>
        <p>Membres inscrits : <strong><%= stats.totalUsers %></strong></p>
        <p>Utilisateurs actifs (10min) : <strong><%= stats.onlineUsers %></strong></p>
      </div>
    </div>

    <!-- üí∞ Solde -->
    <div class="dashboard-card">
      <div class="card-header">
        <i data-lucide="vault"></i>
        <h2>Coffre</h2>
      </div>
      <div class="card-content">
        <p>Solde total : <strong><%= vault.total %> ‚Ç¨</strong></p>
        <% vault.cryptos.forEach(c => { %>
          <p><%= c.currency.toUpperCase() %> : <strong><%= c.total_eur %> ‚Ç¨</strong></p>
        <% }) %>
      </div>
    </div>

  </div>
</section>
