<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title || "Djelo" %></title>

  <!-- Styles -->
  <link rel="stylesheet" href="/style/main.css" />
  <link rel="stylesheet" href="/style/header.css" />
  <link rel="stylesheet" href="/style/sidebar.css" />
  <% if (showFooter) { %>
    <link rel="stylesheet" href="/style/footer.css" />
  <% } %>
</head>
<script src="https://unpkg.com/lucide@latest"></script>
<body>
  <!-- 🔝 HEADER -->
  <%- include('../partials/header') %>

  <!-- 🧱 WRAPPER PRINCIPAL -->
  <main class="main-wrapper">
    <!-- 📂 SIDEBAR -->
    <%- include('../partials/sidebar') %>

    <!-- 📦 CONTENU -->
    <div class="main-content">
      <%- body %>

        <div style="height: 150vh; background: transparent;"></div>

      <!-- 👇 Forcer le scroll sur mobile si nécessaire -->
      <div style="height: 300px;"></div>
    </div>
  </main>

  <!-- ⬇️ FOOTER UNIQUEMENT SUR PAGE ACCUEIL -->
  <% if (showFooter) { %>
    <%- include('../partials/footer') %>
  <% } %>

  <!-- 🔧 JS SIDEBAR + FOOTER -->
  <script>
    function isMobile() {
      return window.innerWidth <= 768;
    }

    document.addEventListener('DOMContentLoaded', () => {
      const sidebar = document.querySelector('.sidebar');
      const toggleSidebarBtn = document.getElementById('toggleSidebar');

      // Sidebar réduite au chargement sur mobile
      if (isMobile()) {
        sidebar?.classList.add('sidebar--collapsed');
      }

      // Toggle sidebar
      toggleSidebarBtn?.addEventListener('click', () => {
        if (isMobile()) {
          sidebar?.classList.toggle('hidden-mobile');
        } else {
          sidebar?.classList.toggle('sidebar--collapsed');
        }
      });

      // Toggle des sous-menus
      document.querySelectorAll('.sidebar-toggle').forEach(el => {
        el.addEventListener('click', (e) => {
          const id = el.dataset.id;
          const link = el.dataset.link;

          if (isMobile()) {
            window.location.href = link;
            return;
          }

          if (sidebar.classList.contains('sidebar--collapsed')) {
            sidebar.classList.remove('sidebar--collapsed');
            setTimeout(() => {
              document.getElementById('submenu-' + id)?.classList.toggle('open');
            }, 150);
          } else {
            document.getElementById('submenu-' + id)?.classList.toggle('open');
          }

          e.preventDefault();
        });
      });

      // Footer visibility on scroll
      const footer = document.querySelector('.footer-bloc');
      if (footer) {
        window.addEventListener('scroll', () => {
          const atBottom = window.innerHeight + window.scrollY >= document.body.offsetHeight - 80;
          footer.classList.toggle('visible', atBottom);
        });
      }
    });
  </script>
  <script>
  lucide.createIcons();
</script>
</body>
</html>
